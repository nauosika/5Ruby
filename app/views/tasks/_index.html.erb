<table class="table">
  <thead>
    <tr>
      <td>任務內容</td>
      <td>任務建立時間</td>
      <td>任務結束時間</td>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.created_at&.strftime('%Y-%m-%d %H:%M') %></td>
        <td><%= task.end_at&.strftime('%Y-%m-%d %H:%M') %></td>
        <td><%= link_to "檢視", task_path(task) %></td>
      </tr>
    <% end %>
  </tbody>
</table>